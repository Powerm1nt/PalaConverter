<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.theo79.palatojar.ui.controllers.PalaConverterUiController">
    <center>
        <BorderPane>
            <left>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select the Pala-Mod file to "
                      BorderPane.alignment="CENTER">
                    <font>
                        <Font size="15.0"/>
                    </font>
                </Text>
            </left>
            <center>
                <ComboBox fx:id="chooseAction" BorderPane.alignment="CENTER" prefHeight="30"/>
            </center>
        </BorderPane>

    </center>
    <right>
        <Button fx:id="chooseFile" mnemonicParsing="false" text="Browse" prefWidth="80"
                prefHeight="30" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="15.0" left="35.0" right="8.0" top="15.0"/>
            </BorderPane.margin>
        </Button>
    </right>
    <bottom>
        <Text BorderPane.alignment="CENTER">
            Made with love, by Theo79
        </Text>
    </bottom>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
</BorderPane>
