<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.theo79.palatojar.PalaConverterUiController">
    <center>
        <BorderPane>
            <left>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Select the Pala-Mod file to " BorderPane.alignment="CENTER">
                    <font>
                        <Font size="15.0" />
                    </font>
                </Text>
            </left>
            <center>
                <ComboBox fx:id="chooseAction" prefHeight="30" promptText="DEFAULT" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>

    </center>
    <right>
        <Button fx:id="chooseFile" mnemonicParsing="false" prefHeight="30" prefWidth="80" text="Browse" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="15.0" left="35.0" right="8.0" top="15.0" />
            </BorderPane.margin>
        </Button>
    </right>
    <bottom>
        <Text fx:id="aboutTxt" BorderPane.alignment="CENTER">
            Made with love, by Theo79
        </Text>
    </bottom>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</BorderPane>
